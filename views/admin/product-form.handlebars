<h1 style="text-align: center; margin-bottom: 2rem;">
  {{#if edit}}✏️ Editar Producto{{else}}➕ Agregar Producto{{/if}}
</h1>

<form action="{{#if edit}}/admin/products/{{product._id}}{{else}}/admin/products{{/if}}" method="POST" style="max-width: 600px; margin: auto;">
  <div style="margin-bottom: 1rem;">
    <label for="title">Título</label><br />
    <input type="text" id="title" name="title" required value="{{product.title}}" style="width: 100%; padding: 8px;" />
  </div>

  <div style="margin-bottom: 1rem;">
    <label for="description">Descripción</label><br />
    <textarea id="description" name="description" required style="width: 100%; padding: 8px;">{{product.description}}</textarea>
  </div>

  <div style="margin-bottom: 1rem;">
    <label for="price">Precio</label><br />
    <input type="number" step="0.01" id="price" name="price" required value="{{product.price}}" style="width: 100%; padding: 8px;" />
  </div>

  <div style="margin-bottom: 1rem;">
    <label for="image">URL de imagen</label><br />
    <input type="text" id="image" name="image" required value="{{product.image}}" style="width: 100%; padding: 8px;" />
  </div>

  <div style="text-align: center;">
    <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px;">
      {{#if edit}}Actualizar{{else}}Agregar{{/if}}
    </button>
  </div>
</form>
